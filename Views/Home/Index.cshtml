@model Mensaje
@{
    ViewData["Title"] = "Home Page";    
}

<div class="text-left">
    <h4> Cargar Archivo</h4>
    <form asp-controller="Home" asp-action="ArchivoSimple"  enctype="multipart/form-data" method="post">
        
        <input type="file" name="Archivo" />
        <button type="submit">Cargar</button>
    </form>
</div>
@if (Model != null)
{
    <div class="text-left">
        <table>
            <tr>
                <br />
            </tr>
            <tr>
                <td>
                    @if (Model.Error != "")
                    {
                        <label id="Error" style="color : red">

                        </label> @Model.Error

                    }

                </td>

            </tr>
            <tr>
                <td>
                    @if (Model.Exito != "")
                    {
                        <label id="Exito" style="color : green">

                        </label> @Model.Exito
                    }
                </td>

            </tr>
        </table>
    </div>
}

